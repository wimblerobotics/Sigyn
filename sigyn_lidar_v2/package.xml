  <version>1.0.0</version>
  <description>Multi-LIDAR driver for Sigyn robot with motion correction support. Based on LDROBOT SDK with vendor protocol implementation.</description>
  <maintainer email="your-email@example.com">Your Name</maintainer>
  <license>MIT</license>
  
  <!-- Attribution to original LDROBOT implementation -->
  <author email="support@ldrobot.com">LDROBOT Team</author>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>sensor_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>
  <depend>tf2_geometry_msgs</depend>

  <test_depend>ament_lint_auto</test_depend>
