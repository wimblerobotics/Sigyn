<?xml version="1.0"?>
<root main_tree_to_execute="MainTree">

  <BehaviorTree ID="MainTree">
    <Sequence name="SimpleTest">
      <!-- Test battery is OK by inverting the low battery check -->
      <Inverter name="BatteryOK">
        <CheckBatteryState name="TestBattery"/>
      </Inverter>
      <!-- Test LIDAR health -->
      <CheckLidarHealth name="TestLidar"/>
      <AlwaysSuccess name="Done"/>
    </Sequence>
  </BehaviorTree>

</root>
