<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- This file contains ros2_control hardware interface definitions -->
  <!-- It supports both simulation (Gazebo) and fake hardware modes -->

  <xacro:arg name="sim_mode" default="true"/>
  <xacro:arg name="use_fake_hardware" default="false"/>

  <!-- SIMULATION MODE: Use Gazebo System -->
  <xacro:if value="$(arg sim_mode)">
    <!-- Joints are controlled by Gazebo -->
    <ros2_control name="r2c_test_system" type="system">
      <hardware>
        <!-- Gazebo provides the physics simulation -->
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>

      <!-- LEFT WHEEL - Velocity controlled, continuous rotation -->
      <joint name="left_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-10.0</param>  <!-- rad/s -->
          <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>  <!-- radians -->
        <state_interface name="velocity"/>  <!-- rad/s -->
      </joint>

      <!-- RIGHT WHEEL - Velocity controlled, continuous rotation -->
      <joint name="right_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-10.0</param>  <!-- rad/s -->
          <param name="max">10.0</param>
        </command_interface>
        <state_interface name="position"/>  <!-- radians -->
        <state_interface name="velocity"/>  <!-- rad/s -->
      </joint>

      <!-- ARM JOINT - Position controlled, revolute joint -->
      <joint name="arm_joint">
        <command_interface name="position">
          <param name="min">-3.14159</param>  <!-- -pi radians -->
          <param name="max">3.14159</param>   <!-- +pi radians -->
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
    </ros2_control>

    <!-- SIMULATION MODE: Use Gazebo-compatible sensor hardware interface -->
    <ros2_control name="sensor_system" type="system">
      <hardware>
        <plugin>r2c_tutorial/SensorHardwareInterfaceSim</plugin>
        <param name="sim_mode">true</param>
      </hardware>

      <!-- TEMPERATURE SENSOR - Simulated temperature with thermal dynamics -->
      <sensor name="temperature_sensor">
        <state_interface name="temperature"/>  <!-- degrees Celsius -->
        <command_interface name="temperature"/>  <!-- For test injection -->
        <param name="frame_id">temperature_sensor</param>
        <param name="lower_limit">-40.0</param>
        <param name="upper_limit">125.0</param>
        <param name="initial_value">25.0</param>  <!-- Room temperature -->
      </sensor>

      <!-- BATTERY SENSOR - Simulated voltage and current -->
      <sensor name="battery_sensor">
        <state_interface name="voltage"/>  <!-- volts -->
        <state_interface name="current"/>  <!-- amperes -->
        <command_interface name="voltage"/>  <!-- For test injection -->
        <command_interface name="current"/>  <!-- For test injection -->
        <param name="frame_id">base_link</param>
        <param name="voltage_lower_limit">0.0</param>
        <param name="voltage_upper_limit">24.0</param>
        <param name="current_lower_limit">0.0</param>
        <param name="current_upper_limit">50.0</param>
        <param name="initial_voltage">12.0</param>  <!-- 12V nominal -->
        <param name="initial_current">2.0</param>   <!-- 2A typical load -->
      </sensor>

      <!-- VL53L0X DISTANCE SENSOR - Simulated time-of-flight range -->
      <sensor name="range_sensor">
        <state_interface name="range"/>  <!-- meters -->
        <command_interface name="range"/>  <!-- For test injection -->
        <param name="frame_id">temperature_sensor</param>  <!-- Mounted on arm tip -->
        <param name="lower_limit">0.03</param>  <!-- 30mm min range -->
        <param name="upper_limit">2.0</param>    <!-- 2m max range -->
        <param name="initial_value">1.0</param>  <!-- 1m default -->
      </sensor>
    </ros2_control>

  </xacro:if>

  <!-- REAL HARDWARE MODE: Use custom sensor hardware interface -->
  <xacro:unless value="$(arg sim_mode)">
    <!-- Sensors handled by custom hardware interface (subscribes to Teensy topics) -->
    <ros2_control name="sensor_system" type="system">
      <hardware>
        <plugin>r2c_tutorial/SensorHardwareInterface</plugin>
        <param name="sim_mode">false</param>
      </hardware>

      <!-- TEMPERATURE SENSOR - Custom sensor interface -->
      <sensor name="temperature_sensor">
        <state_interface name="temperature"/>  <!-- degrees Celsius -->
        <command_interface name="temperature"/>  <!-- For test injection -->
        <param name="frame_id">temperature_sensor</param>
        <param name="lower_limit">-40.0</param>
        <param name="upper_limit">125.0</param>
        <param name="initial_value">25.0</param>  <!-- Room temperature -->
      </sensor>

      <!-- BATTERY SENSOR - Battery/power monitoring (combined voltage + current) -->
      <sensor name="battery_sensor">
        <state_interface name="voltage"/>  <!-- volts -->
        <state_interface name="current"/>  <!-- amperes -->
        <command_interface name="voltage"/>  <!-- For test injection -->
        <command_interface name="current"/>  <!-- For test injection -->
        <param name="frame_id">base_link</param>
        <param name="voltage_lower_limit">0.0</param>
        <param name="voltage_upper_limit">24.0</param>
        <param name="current_lower_limit">0.0</param>
        <param name="current_upper_limit">10.0</param>
        <param name="initial_voltage">12.0</param>  <!-- 12V nominal -->
        <param name="initial_current">0.5</param>   <!-- 500mA idle -->
      </sensor>

      <!-- VL53L0X DISTANCE SENSOR - Time-of-flight range -->
      <sensor name="range_sensor">
        <state_interface name="range"/>  <!-- meters -->
        <command_interface name="range"/>  <!-- For test injection -->
        <param name="frame_id">temperature_sensor</param>  <!-- Mounted on arm tip -->
        <param name="lower_limit">0.03</param>  <!-- 30mm min range -->
        <param name="upper_limit">2.0</param>    <!-- 2m max range -->
        <param name="initial_value">0.5</param>  <!-- 50cm default -->
      </sensor>
    </ros2_control>
  </xacro:unless>

  <!-- FAKE HARDWARE MODE: For testing without Gazebo -->
  <xacro:unless value="$(arg sim_mode)">
    <xacro:if value="$(arg use_fake_hardware)">
      <ros2_control name="r2c_test_system" type="system">
        <hardware>
          <!-- Mock hardware for testing controllers without real hardware or simulation -->
          <plugin>mock_components/GenericSystem</plugin>
          <param name="fake_sensor_commands">true</param>
          <param name="state_following_offset">0.0</param>
        </hardware>

        <joint name="left_wheel_joint">
          <command_interface name="velocity"/>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
        </joint>

        <joint name="right_wheel_joint">
          <command_interface name="velocity"/>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
        </joint>

        <joint name="arm_joint">
          <command_interface name="position"/>
          <state_interface name="position"/>
          <state_interface name="velocity"/>
        </joint>

        <sensor name="temperature_sensor">
          <state_interface name="temperature"/>
          <param name="initial_value">25.0</param>
        </sensor>

        <sensor name="voltage_sensor">
          <state_interface name="voltage"/>
          <param name="initial_value">12.0</param>
        </sensor>

        <sensor name="current_sensor">
          <state_interface name="current"/>
          <param name="initial_value">0.5</param>
        </sensor>

        <sensor name="vl53l0x_sensor">
          <state_interface name="range"/>
          <param name="initial_value">0.5</param>
        </sensor>

      </ros2_control>
    </xacro:if>
  </xacro:unless>

  <!-- Gazebo ros2_control plugin configuration -->
  <xacro:if value="$(arg sim_mode)">
    <gazebo>
      <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>$(find r2c_tutorial)/config/controllers.yaml</parameters>
        <ros>
          <remapping>~/robot_description:=robot_description</remapping>
        </ros>
      </plugin>
    </gazebo>
  </xacro:if>

</robot>
