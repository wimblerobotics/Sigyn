<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="wheel" params="side radius width pos_x pos_y pos_z mass_kg">
    <foo side="${side}" radius="${radius}" width="${width}" pos_x="${pos_x}" pos_y="${pos_y}" pos_z="${pos_z}" mass_kg="${mass_kg}"/>
    <link name="${side}_wheel_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <geometry>
          <cylinder radius="${radius}" length="${width}" />
        </geometry>
        <material name="wheel_material" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <geometry>
          <cylinder radius="${radius}" length="${width}" />
        </geometry>
      </collision>
      <xacro:solid_cylinder_inertial rpy="${pi/2} 0 0" xyz="0 0 0" mass_kg="${mass_kg}" radius="${radius}" length="${width}" />
    </link>
    <gazebo reference="${side}_wheel_link">
      <visual>
        <material>
          <ambient>0.1764 0.4588 0.8509 1.0</ambient>
          <diffuse>0.1764 0.4588 0.8509 1.0</diffuse>
          <specular>0.1764 0.4588 0.8509 1.0</specular>
          <emissive>0.0 0.0 0.0 0.0</emissive>
        </material>
      </visual>
    </gazebo>
    <joint name="${side}_wheel_joint" type="continuous">
      <axis xyz="0 1 0" />
      <parent link="base_link" />
      <child link="${side}_wheel_link" />
      <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0" />
    </joint>
  </xacro:macro>

  <xacro:macro name="wheels" params="config instances:=^*">
    <xacro:if value="${instances}">
      <!-- pop first item from list -->
      <xacro:property name="instance" value="${instances.pop(0)}"/>
      <foo instance="${instance['name']}"/>
      <xacro:property name="y" value="${(config.body.radius-config.wheels.center_offset)*instance['y_position_multiplier']}"/>
      <xacro:property name="z" value="-${(config.wheels.gear_box_height/2)+config.wheels.gear_box_spacing_from_base}"/>
      <xacro:wheel pos_y="${y}" pos_z="${z}" side="${instance['name']}" radius="${config.wheels.radius}" width="${config.wheels.width}" pos_x="0.0" mass_kg="${config.wheels.mass}" />
      <xacro:wheels config="${config}" instances="${instances}"/>
    </xacro:if>
  </xacro:macro>

  <material name="wheel_material">
    <color rgba="0.15 0.15 0.15 1" />
  </material>

